# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

POST   /users                           com.alexitc.coinalerts.controllers.UsersController.create()
POST   /verification-tokens/:token      com.alexitc.coinalerts.controllers.UsersController.verifyEmail(token: com.alexitc.coinalerts.models.UserVerificationToken)
POST   /users/login                     com.alexitc.coinalerts.controllers.UsersController.loginByEmail()
GET    /users/me                        com.alexitc.coinalerts.controllers.UsersController.whoAmI()

POST   /fixed-price-alerts              com.alexitc.coinalerts.controllers.FixedPriceAlertsController.create()
GET    /fixed-price-alerts              com.alexitc.coinalerts.controllers.FixedPriceAlertsController.getAlerts(query: com.alexitc.coinalerts.core.PaginatedQuery)
